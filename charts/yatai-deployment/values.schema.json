{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "registry": {
            "type": "string",
            "default": "quay.io/bentoml"
        },
        "image": {
            "type": "object",
            "properties": {
                "repository": {
                    "type": "string",
                    "default": "yatai-deployment"
                },
                "tag": {
                    "type": "string",
                    "default": ""
                },
                "pullPolicy": {
                    "type": "string",
                    "default": "IfNotPresent"
                }
            }
        }
    }
}